<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.maxi.waterpurifier.RegisterActivity">

    <include layout="@layout/widget_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="40dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp" >

            <EditText
                android:id="@id/et_username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textCursorDrawable="@drawable/bg_cursor"
                android:hint="请输入手机号"
                android:textColorHint="#FF979797"
                android:paddingLeft="45dp"
                android:background="@null"
                android:inputType="phone"
                android:maxLength="11" />

            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="match_parent" >

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:scaleType="centerInside"
                    android:src="@mipmap/icon_shouji" />
            </RelativeLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ff1b96fe" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="3"
                android:paddingRight="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <EditText
                        android:id="@id/et_validatecode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textCursorDrawable="@drawable/bg_cursor"
                        android:hint="请输入验证码"
                        android:textColorHint="#FF979797"
                        android:paddingLeft="45dp"
                        android:background="@null"
                        android:inputType="number"
                        android:maxLength="6"/>

                    <RelativeLayout
                        android:layout_width="40dp"
                        android:layout_height="match_parent" >

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="30dp"
                            android:layout_centerInParent="true"
                            android:scaleType="centerInside"
                            android:src="@mipmap/icon_code" />
                    </RelativeLayout>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ff1b96fe" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@id/iv_btn_send_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textCursorDrawable="@drawable/bg_cursor"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textSize="15sp"
                    android:textColor="#ff1b96fe"
                    android:background="@mipmap/btn_send_code_bg"
                    android:layout_marginTop="10dp" />
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <EditText
                android:id="@id/et_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textCursorDrawable="@drawable/bg_cursor"
                android:hint="请输入6-16位密码"
                android:textColorHint="#FF979797"
                android:paddingLeft="45dp"
                android:background="@null"
                android:inputType="text"
                android:maxLength="16" />

            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="match_parent" >

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:scaleType="centerInside"
                    android:src="@mipmap/icon_mima" />
            </RelativeLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ff1b96fe" />

    </LinearLayout>

    <LinearLayout
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="40dp" >

        <ImageView
            android:id="@id/iv_btn_register"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/btn_register2" />
    </LinearLayout>

</LinearLayout>
