<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.maxi.waterpurifier.fragment.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/maxi_head_height"
            android:background="@color/maxi_head_main_color">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/maxi_logo_height"
                android:src="@drawable/bg_logo"
                android:layout_gravity="center"/>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp">

                    <com.daimajia.slider.library.SliderLayout
                        android:id="@id/slider"
                        android:layout_width="match_parent"
                        custom:pager_animation="Accordion"
                        custom:auto_cycle="true"
                        custom:indicator_visibility="visible"
                        custom:pager_animation_span="1100"
                        android:layout_height="150dp"/>

                    <com.daimajia.slider.library.Indicators.PagerIndicator
                        android:id="@id/custom_indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        custom:selected_color="@color/black"
                        custom:unselected_color="@color/white"
                        custom:shape="oval"
                        custom:selected_padding_left="4dp"
                        custom:selected_padding_right="4dp"
                        custom:unselected_padding_left="4dp"
                        custom:unselected_padding_right="4dp"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        custom:selected_width="8dp"
                        custom:selected_height="8dp"
                        custom:unselected_width="8dp"
                        custom:unselected_height="8dp"
                        android:layout_marginBottom="10dp" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@id/slider"
                    android:background="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <com.maxi.waterpurifier.widget.ImageTextView
                            android:id="@id/itv_main_icon_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="淼溪净水"
                            android:drawablePadding="3dp"
                            view:drawable_src="@mipmap/home_icon_1"
                            view:drawable_location="top"
                            view:drawable_width="@dimen/main_home_icon_width"
                            view:drawable_height="@dimen/main_home_icon_height" />

                        <com.maxi.waterpurifier.widget.ImageTextView
                            android:id="@id/itv_main_icon_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="智能家居"
                            android:drawablePadding="3dp"
                            view:drawable_src="@mipmap/home_icon_2"
                            view:drawable_location="top"
                            view:drawable_width="@dimen/main_home_icon_width"
                            view:drawable_height="@dimen/main_home_icon_height" />

                        <com.maxi.waterpurifier.widget.ImageTextView
                            android:id="@id/itv_main_icon_3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="远程医疗"
                            android:drawablePadding="3dp"
                            view:drawable_src="@mipmap/home_icon_3"
                            view:drawable_location="top"
                            view:drawable_width="@dimen/main_home_icon_width"
                            view:drawable_height="@dimen/main_home_icon_height" />

                        <com.maxi.waterpurifier.widget.ImageTextView
                            android:id="@id/itv_main_icon_4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="便民服务"
                            android:drawablePadding="3dp"
                            view:drawable_src="@mipmap/home_icon_4"
                            view:drawable_location="top"
                            view:drawable_width="@dimen/main_home_icon_width"
                            view:drawable_height="@dimen/main_home_icon_height" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <com.maxi.waterpurifier.widget.ImageTextView
                            android:id="@id/itv_main_icon_5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="外卖订餐"
                            android:drawablePadding="3dp"
                            view:drawable_src="@mipmap/home_icon_5"
                            view:drawable_location="top"
                            view:drawable_width="@dimen/main_home_icon_width"
                            view:drawable_height="@dimen/main_home_icon_height" />

                        <com.maxi.waterpurifier.widget.ImageTextView
                            android:id="@id/itv_main_icon_6"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="蔬果生鲜"
                            android:drawablePadding="3dp"
                            view:drawable_src="@mipmap/home_icon_6"
                            view:drawable_location="top"
                            view:drawable_width="@dimen/main_home_icon_width"
                            view:drawable_height="@dimen/main_home_icon_height" />

                        <com.maxi.waterpurifier.widget.ImageTextView
                            android:id="@id/itv_main_icon_7"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="装修建材"
                            android:drawablePadding="3dp"
                            view:drawable_src="@mipmap/home_icon_7"
                            view:drawable_location="top"
                            view:drawable_width="@dimen/main_home_icon_width"
                            view:drawable_height="@dimen/main_home_icon_height" />

                        <com.maxi.waterpurifier.widget.ImageTextView
                            android:id="@id/itv_main_icon_8"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="社区资讯"
                            android:drawablePadding="3dp"
                            view:drawable_src="@mipmap/home_icon_8"
                            view:drawable_location="top"
                            view:drawable_width="@dimen/main_home_icon_width"
                            view:drawable_height="@dimen/main_home_icon_height" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@drawable/bg_split_line"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="center_vertical"
                        android:text="广告位"
                        android:textSize="20sp"
                        android:drawablePadding="10dp"
                        android:drawableLeft="@drawable/bg_split_red_1x"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:layout_margin="10dp">

                    <!--
                    <com.etsy.android.grid.StaggeredGridView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/grid_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:item_margin="8dp"
                        app:column_count="2" />
                    -->

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/main_ad_1"
                            android:paddingRight="5dp" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="240dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/main_ad_2"
                            android:paddingRight="5dp"
                            android:paddingTop="10dp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="240dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/main_ad_2"
                            android:paddingLeft="5dp" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/main_ad_1"
                            android:paddingLeft="5dp"
                            android:paddingTop="10dp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="center_vertical"
                        android:text="广告位"
                        android:textSize="20sp"
                        android:drawablePadding="10dp"
                        android:drawableLeft="@drawable/bg_split_red_1x"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/main_ad_height_1"
                            android:scaleType="fitXY"
                            android:src="@drawable/main_ad_1"
                            android:paddingRight="5dp" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/main_ad_height_2"
                            android:scaleType="fitXY"
                            android:src="@drawable/main_ad_2"
                            android:paddingRight="5dp"
                            android:paddingTop="10dp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/main_ad_height_2"
                            android:scaleType="fitXY"
                            android:src="@drawable/main_ad_2"
                            android:paddingLeft="5dp" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/main_ad_height_1"
                            android:scaleType="fitXY"
                            android:src="@drawable/main_ad_1"
                            android:paddingLeft="5dp"
                            android:paddingTop="10dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</FrameLayout>
