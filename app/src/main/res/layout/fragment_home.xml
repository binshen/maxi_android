<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.maxi.waterpurifier.fragment.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/widget_head" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <com.daimajia.slider.library.SliderLayout
                android:id="@+id/slider"
                android:layout_width="match_parent"
                custom:pager_animation="Accordion"
                custom:auto_cycle="true"
                custom:indicator_visibility="visible"
                custom:pager_animation_span="1100"
                android:layout_height="150dp"/>

            <com.daimajia.slider.library.Indicators.PagerIndicator
                android:id="@+id/custom_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                custom:selected_color="@color/black"
                custom:unselected_color="@color/white"
                custom:shape="oval"
                custom:selected_padding_left="4dp"
                custom:selected_padding_right="4dp"
                custom:unselected_padding_left="4dp"
                custom:unselected_padding_right="4dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                custom:selected_width="8dp"
                custom:selected_height="8dp"
                custom:unselected_width="8dp"
                custom:unselected_height="8dp"
                android:layout_marginBottom="10dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/slider"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="淼溪净水"
                    android:drawablePadding="3dp"
                    android:drawableTop="@mipmap/home_icon_1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="智能家居"
                    android:drawablePadding="3dp"
                    android:drawableTop="@mipmap/home_icon_2" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="远程医疗"
                    android:drawablePadding="3dp"
                    android:drawableTop="@mipmap/home_icon_3" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="便民服务"
                    android:drawablePadding="3dp"
                    android:drawableTop="@mipmap/home_icon_4" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="外卖订餐"
                    android:drawablePadding="3dp"
                    android:drawableTop="@mipmap/home_icon_5" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="蔬果生鲜"
                    android:drawablePadding="3dp"
                    android:drawableTop="@mipmap/home_icon_6" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="装修建材"
                    android:drawablePadding="3dp"
                    android:drawableTop="@mipmap/home_icon_7" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="社区资讯"
                    android:drawablePadding="3dp"
                    android:drawableTop="@mipmap/home_icon_8" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/bg_split_line"/>


        
    </LinearLayout>

</FrameLayout>
